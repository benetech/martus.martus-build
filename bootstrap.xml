    <target name="build.martus.and.installer" depends="cvs.checkout,cvs.checkout.installers">
        <ant antfile="${cvs.home}/${martus.module}/cvs.build.xml" dir="${cvs.home}/${martus.module}" target="release.and.checkin"/>
        <ant antfile="${cvs.home}/${martus.module}/installer.build.xml" dir="${cvs.home}" target="build.installers"/>
    </target>
-->


</project>
