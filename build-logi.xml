<!-- Ant build file - Needs Ant v1.6.x or later -->
<project name="martus-logi" default="notify-logi" basedir=".">
    <description>
        Martus logi Build File
    </description>

    <!-- set global properties for this build -->
    <property file="build.properties" />

    <!-- imports -->

    <!-- module names and dirs -->
    <property name="martus.module"  value="martus"/>

    <!-- logi module name and dirs -->
    <property name="martus.logi.module"  value="martus-logi"/>
    <property name="martus.logi.src.root" value="${build.basedir}/${martus.logi.module}/source"/>
    <property name="martus.logi.class.root" value="${build.basedir}/${martus.logi.module}/bin"/>

    <target name="notify-logi">
        <echo message="This is not a standalone build file. Please run these tasks thru the main build.xml."/>
    </target>

  <!-- ================================================================== -->
  <!-- B U I L D                                                          -->
  <!-- ================================================================== -->

    <target name="build-logi" depends="init" description="Compile martus-logi">
        <mkdir dir="${martus.logi.class.root}"/>
        <javac target="1.4" optimize="on" srcdir="${martus.logi.src.root}" destdir="${martus.logi.class.root}" failonerror="true">
              <include name="**/*.java"/>
        </javac>
    </target>

</project>
