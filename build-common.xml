<!-- Ant build file - Needs Ant v1.6.x or later -->
<project name="martus-common" default="notify-common" basedir=".">
    <description>
        Martus Common Build File
    </description>

    <!-- imports -->
    <import file="build.shared.values.xml" />
    <import file="build-thirdparty.xml" />
    <import file="build-utils.xml" />
    <import file="build-logi.xml" />
    <import file="build-hrdag.xml" />
    <import file="build-jarverifier.xml" />
    <import file="build-swing.xml" />

    <!-- common classpath -->
    <path id="common.class.path">
        <pathelement path="${martus.common.class.root}"/>
        <pathelement path="${martus.utils.class.root}/"/>
        <pathelement path="${martus.swing.class.root}"/>
        <pathelement path="${martus.logi.class.root}"/>
        <pathelement path="${martus.jarverifier.class.root}"/>
        <pathelement path="${martus.hrdag.class.root}"/>
        <fileset dir="${martus.thirdparty.lib.xmlrpc}" includes="**/*.jar"/>
        <fileset dir="${martus.thirdparty.lib.infinitemonkey}" includes="**/*.jar"/>
        <fileset dir="${martus.thirdparty.lib.junit}" includes="**/*.jar"/>
        <fileset dir="${martus.thirdparty.lib.bouncycastle}" includes="**/*.jar"/>
    </path>

    <target name="notify-common">
        <echo message="This is not a standalone build file. Please run these tasks thru the main build-meta.xml."/>
    </target>

  <!-- ================================================================== -->
  <!-- B U I L D                                                          -->
  <!-- ================================================================== -->

    <target name="build-common" depends="init,build-logi,build-utils,build-hrdag,build-jarverifier,build-swing" description="Compile martus-common">
        <mkdir dir="${martus.common.class.root}"/>
        <replace file="${martus.common.src.root}/org/martus/common/VersionBuildDate.java" token="#{BUILDDATE}" value="${DSTAMP}.${build.number}"/>
        <javac target="1.4" optimize="on" srcdir="${martus.common.src.root}" destdir="${martus.common.class.root}" failonerror="true">
            <classpath refid="common.class.path"/>
            <include name="**/*.java"/>
        </javac>
        <!-- Copy common files that are needed for the jars -->
        <copy todir="${martus.common.class.root}" >
            <fileset dir="${martus.common.src.root}">
                <include name="**/*.SIG"/>
            </fileset>
        </copy>
    </target>

    <!-- ================================================================== -->
    <!-- T E S T                                                            -->
    <!-- ================================================================== -->

    <target name="test-common" depends="jar-common">
        <taskdef name="junit" classname="org.apache.tools.ant.taskdefs.optional.junit.JUnitTask">
            <classpath>
                <fileset dir="${martus.thirdparty.lib.junit}" includes="**/*.jar"/>
                <fileset dir="${martus.thirdparty.lib.ant}" includes="**/*.jar"/>
            </classpath>
        </taskdef>
        <junit fork="true" haltonfailure="yes" printsummary="withOutAndErr">
            <jvmarg value="-Xbootclasspath/p:${public.release.folder}/bc-jce-${DSTAMP}.${build.number}.jar"/>
            <jvmarg value="-Xbootclasspath/p:${martus.thirdparty.lib.bouncycastle}/bcprov-jdk14-${bouncycastle.version}.jar"/>
            <classpath>
                <pathelement path="${java.class.path}"/>
                <fileset dir="${public.release.folder}" >
                    <include name="martus-common-${DSTAMP}.${build.number}.jar"/>
                </fileset>
                <fileset dir="${martus.thirdparty.lib.xmlrpc}" includes="**/*.jar"/>
                <fileset dir="${martus.thirdparty.lib.infinitemonkey}" includes="**/*.jar"/>
                <fileset dir="${martus.thirdparty.lib.junit}" includes="**/*.jar"/>
            </classpath>
            <formatter type="brief" usefile="no" />
            <test name="org.martus.common.test.TestCommon"/>
        </junit>
    </target>

  <!-- ================================================================== -->
  <!-- J A R                                                          -->
  <!-- ================================================================== -->

    <target name="jar-common" depends="build-common" description="Create martus-common jar">
        <mkdir dir="${public.release.folder}"/>
        <jar destfile="${public.release.folder}/martus-common-${DSTAMP}.${build.number}.jar">
            <fileset dir="${martus.common.class.root}">
                <include name="**/*.class"/>
                <include name="**/*.SF"/>
            </fileset>
            <fileset dir="${martus.utils.class.root}" includes="**/*.class"/>
            <fileset dir="${martus.hrdag.class.root}" includes="**/*.class"/>
            <fileset dir="${martus.logi.class.root}" includes="**/*.class"/>
            <fileset dir="${martus.swing.class.root}" includes="**/*.class"/>
            <fileset dir="${martus.jarverifier.class.root}">
                <include name="**/*.class"/>
                <include name="**/ssmartusclientks"/>
            </fileset>
        </jar>
    </target>

    <target name="jarsign-common" depends="check_keystore,check_keystore_location,fail_keystore_missing,check_storepass,check_keypass,jarsign-bc-jce,jar-common" description="Sign Common jars">
    	<property name="common-filename" value="${public.release.folder}/martus-common-${DSTAMP}.${build.number}.jar"/>
        <signjar keystore="${sign.keystore}" storepass="${sign.storepass}" keypass="${sign.keypass}" alias="ssmtsjar" jar="${common-filename}" />
    </target>

</project>
