<!-- Ant build file - Needs Ant v1.6.x or later -->
<project name="builder">
    <description>
        Martus Installer Build File
    </description>

    <!-- set global properties for this build -->
    <import file="build.shared.values.xml" />
    <property file="build.properties" />

    <target name="cvs.installer.checkout">
        <cvs cvsRoot="${cvs.cvsroot}" quiet="false" dest="${cvs.home}" failonerror="true">
            <commandline>
                <argument value="-q"/>
                <argument value="checkout"/>
                <argument value="${binary.module}"/>
            </commandline>
        </cvs>
        <available file="${cvs.home}/binary-martus/Installer/BuildFiles/Jars" type="dir" property="buildfiles.jardir.present"/>
    </target>

    <target name="create.jars.dir" unless="buildfiles.jardir.present">
        <mkdir dir="${cvs.home}/binary-martus/Installer/BuildFiles/Jars"/>
    </target>

    <target name="build.installers" depends="cvs.installer.checkout,create.jars.dir">

    </target>

</project>
