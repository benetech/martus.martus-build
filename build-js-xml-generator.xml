<!-- Ant build file - Needs Ant v1.6.x or later -->
<project name="martus-js-xml-generator" default="notify-js-xml-generator" basedir=".">
    <description>
        Martus Swing Build File
    </description>

    <!-- imports -->
    <import file="build.shared.values.xml" />
    <import file="build-common.xml" />

    <!-- js-xml-generator classpath -->
    <path id="jsxmlgenerator.class.path">
        <pathelement path="${martus.common.class.root}/"/>
		<pathelement path="${martus.utils.class.root}/"/>
		<fileset dir="${martus.thirdparty.lib.rhino}" includes="**/*.jar"/>
		<fileset dir="${martus.thirdparty.lib.junit}" includes="**/*.jar"/>
    </path>
    
    <!-- js-xml-generator files -->
    <fileset id="jsxmlgenerator.nosrc.files" dir="${martus.jsxmlgenerator.src.root}">
		<include name="org/martus/martusjsxmlgenerator/*.js"/>
		<include name="org/martus/martusjsxmlgenerator/*.csv"/>
		<include name="org/martus/martusjsxmlgenerator/*.xml"/>
    </fileset>

    <target name="notify-js-xml-generator">
        <echo message="This is not a standalone build file. Please run these tasks thru the main build-meta.xml."/>
    </target>

  <!-- ================================================================== -->
  <!-- B U I L D                                                          -->
  <!-- ================================================================== -->

    <target name="build-js-xml-generator" depends="init" description="Compile martus-js-xml-generator">
        <mkdir dir="${martus.jsxmlgenerator.class.root}"/>
        <javac target="1.4" optimize="on" srcdir="${martus.jsxmlgenerator.src.root}" destdir="${martus.jsxmlgenerator.class.root}" failonerror="true">
            <classpath refid="jsxmlgenerator.class.path"/>
            <include name="**/*.java"/>
        </javac>
        
        <!-- Copy files that are needed for the jars -->
        <copy todir="${martus.jsxmlgenerator.class.root}" >
            <fileset refid="jsxmlgenerator.nosrc.files"/>
        </copy>
    </target>

</project>
