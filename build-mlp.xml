<project name="martus-mlp" default="mlp" basedir=".">
    <description>
        Martus MLP Build File
    </description>

    <input
         message="Please enter Language Code (Eg: fr, es, bur):"
         addproperty="LANGUAGE"
     />

    <property name="CLIENTDIR" value="../martus-client/source/org/martus/client/swingui"/>
    <!-- imports -->
    <target name="check_keypass" unless="sign.keypass">
        <input
            message="Please enter key pw:"
            addproperty="sign.keypass"
        />
    </target>

    <target name="check_storepass" unless="sign.storepass">
        <input
            message="Please enter store pw:"
            addproperty="sign.storepass"
        />
    </target>
    
  <!-- ================================================================== -->
  <!-- J A R                                                              -->
  <!-- ================================================================== -->

      <!-- create mlp signed jar -->
      <target name="mlp" depends="check_storepass, check_keypass" description="Create a Signed Martus Language Pack">
		  <jar jarfile="target/Martus-${LANGUAGE}.mlp">
		  	<fileset dir="${CLIENTDIR}" includes="Martus-${LANGUAGE}.mtf" />
		  	<fileset dir="${CLIENTDIR}" includes="MartusHelp-${LANGUAGE}.txt" />
		  	<fileset dir="${CLIENTDIR}" includes="MartusHelpTOC-${LANGUAGE}.txt" />
		  	<fileset dir="BuildFiles/Documents/client" includes="README_${LANGUAGE}.pdf" />
		  	<fileset dir="BuildFiles/Documents/client" includes="quickstartguide_${LANGUAGE}.pdf" />
		  	<fileset dir="BuildFiles/Documents/client" includes="martus_user_guide_${LANGUAGE}.pdf" />
          </jar>
          <signjar storepass="${sign.storepass}" keypass="${sign.keypass}" alias="ssmtsjar" >
            <fileset dir="target">
                <include name="Martus-${LANGUAGE}.mlp"/>
            </fileset>
        </signjar>
        <checksum algorithm="SHA" fileext=".sha1">
            <fileset dir="target">
                <include name="Martus-${LANGUAGE}.mlp"/>
            </fileset>
        </checksum>
      </target>

</project>
