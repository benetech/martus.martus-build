<!-- Ant build file - Needs Ant v1.6.x or later -->
<project name="martus-utils" default="notify-utils" basedir=".">
    <description>
        Martus Utils Build File
    </description>

    <!-- imports -->
	<import file="build-meta.xml" />
    <import file="build.shared.values.xml" />

    <!-- utils classpath -->
    <path id="utils.class.path">
        <fileset dir="${martus.thirdparty.lib.junit}" includes="**/*.jar"/>
    </path>

    <target name="notify-utils">
        <echo message="This is not a standalone build file. Please run these tasks thru the main build-meta.xml."/>
    </target>

  <!-- ================================================================== -->
  <!-- B U I L D                                                          -->
  <!-- ================================================================== -->

    <target name="build-utils" depends="init" description="Compile martus-utils">
        <mkdir dir="${martus.utils.class.root}"/>
        <javac target="1.4" optimize="on" srcdir="${martus.utils.src.root}" destdir="${martus.utils.class.root}" failonerror="true">
            <classpath refid="utils.class.path"/>
            <include name="**/*.java"/>
        </javac>
    </target>

</project>
